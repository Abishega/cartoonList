{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext", // Important for Jest to handle ES module syntax
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] // This makes '@' resolve to the 'src' directory
    }
  },
  "include": [
    "src/**/*",
    "jest.setup.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/tests/__test__"
  ],
  "exclude": [
    "node_modules"
  ]
}

